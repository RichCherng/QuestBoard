<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.riche_000.questboard.Expand">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="223dp"
            android:layout_height="170dp"
            android:weightSum="1">

            <TextView
                android:layout_width="199dp"
                android:layout_height="50dp"
                android:text="Title"
                android:id="@+id/expand_title"
                android:layout_weight="0.54"
                android:textStyle="bold|italic"
                android:gravity="center" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:text="UserID"
                android:id="@+id/expand_ID"
                android:layout_weight="0.13"
                android:gravity="center" />
        </LinearLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="134dp"
            android:id="@+id/expand_img"
            android:layout_gravity="right"
            android:layout_weight="0.69" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time"
        android:id="@+id/expand_time"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="200dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/expand_date"
        android:gravity="center"
        android:layout_below="@+id/expand_time"
        android:layout_alignRight="@+id/expand_time"
        android:layout_alignEnd="@+id/expand_time" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time Posted"
        android:id="@+id/expand_time_posted"
        android:gravity="center"
        android:layout_below="@+id/expand_date"
        android:layout_alignRight="@+id/expand_date"
        android:layout_alignEnd="@+id/expand_date" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date Posted"
        android:id="@+id/expand_date_posted"
        android:gravity="center"
        android:layout_below="@+id/expand_time_posted"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location"
        android:id="@+id/expand_location"
        android:gravity="center"
        android:layout_below="@+id/expand_date_posted"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
